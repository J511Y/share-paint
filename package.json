{
  "name": "paint-share",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:socket": "cd socket-server && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:socket\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e:critical": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "preflight:env": "node scripts/preflight-env.mjs",
    "check:secrets": "node scripts/secret-scan.mjs",
    "qa:sheet": "node scripts/generate-regression-sheet.mjs",
    "retro:sheet": "node scripts/generate-launch-retro.mjs",
    "check:socket": "node --check socket-server/server.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.49.4",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^3.0.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
