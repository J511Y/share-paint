# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Socket server fallback (optional if NEXT_PUBLIC_SUPABASE_URL is shared)
SUPABASE_URL=https://your-project.supabase.co

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Social OAuth provider toggles (required for social-only auth flow)
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=true
NEXT_PUBLIC_AUTH_KAKAO_ENABLED=true
NEXT_PUBLIC_AUTH_NAVER_ENABLED=true

# WebSocket (Socket.io) - optional fallback endpoint
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Battle password hash secret (server-side only)
BATTLE_PASSWORD_PEPPER=optional-strong-random-string
